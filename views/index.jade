extends layout

block content
  div
    div.main(style="overflow-x: hidden; overflow-y:hidden;")
      div.box
        div(style='height:150px; width:100%; clear:both;')
        div.row-fluid
          div.col-md-6.column
            div#tweet-container-drpc
          div.col-md-6.column
            div#tweet-container-splout
    div.container.alert.alert-info(role='alert', style="position:fixed;top:0px;left:0px;width:100%;")
      form.form-inline(action='')
        input#hashtag.form-control(type='text', style='width:80%;', placeholder='Type hashtag to search')
        div.spacer
        button#search-button.btn.btn-default(type='submit', style='width:9%;') Search
      div.col-md-6
        h1 Storm
        h5#time-taken-storm
      div.col-md-6
        h1 Splout
        h5#time-taken-splout